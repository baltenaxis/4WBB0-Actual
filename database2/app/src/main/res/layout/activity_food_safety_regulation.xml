<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".FoodSafetyRegulation">

    <TextView
        android:id="@+id/textViewFSG"
        android:layout_width="328dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:text="Food Safety Guidelines"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="358dp"
        android:layout_height="87dp"
        android:layout_marginTop="148dp"
        android:text="We care about the safety of our users. To encourage others to waste less food we want to ensure our users that food taken from a locker is still consumable. Before putting your food in the locker, we would like to inform the basic food guidelines."
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="344dp"
        android:layout_height="35dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="32dp"
        android:text="\u25CF Add cooked leftovers only if made the day before."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="56dp"
        android:text="\u25CF Think of the transportation time when it comes to raw products (like milk)."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="56dp"
        android:text="\u25CF The picture of the product should be uploaded so users know what they are buying"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="56dp"
        android:text="\u25CF We want a safe community for our users. Think of the hygiene of your product. Such as:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="292dp"
        android:layout_height="34dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="56dp"
        android:text="\u25CB Your personal hygiene if in contact with product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="292dp"
        android:layout_height="34dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="56dp"
        android:text="\u25CB The handling of the processed product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="292dp"
        android:layout_height="34dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="56dp"
        android:text="\u25CB The packaging of the product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>