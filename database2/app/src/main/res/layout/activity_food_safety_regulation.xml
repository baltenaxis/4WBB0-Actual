<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regulations"
    tools:context=".FoodSafetyRegulation">


    <TextView
        android:id="@+id/textViewFSG"
        android:layout_width="337dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserrat_black"
        android:text="Food Safety Guidelines"
        android:textColor="#d34e24"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="330dp"
        android:layout_height="122dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="We care about the safety of our users. To encourage others to waste less food we want to ensure our users that food taken from a locker is still consumable. Before putting your food in the locker, we would like to inform the basic food guidelines."
        android:textColor="#164345"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFSG" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="321dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CF Add cooked leftovers only if made the day before."
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="292dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CB The packaging of the product"
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="292dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CB Your personal hygiene if in contact with product"
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="292dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CB The handling of the processed product"
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CF Think of the transportation time when it comes to raw products (like milk)."
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CF The picture of the product should be uploaded so users know what they are buying"
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CF We want a safe community for our users. Think of the hygiene of your product. Such as:"
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="\u25CF If you are unsure about the quality of a certain food, don't place it in the locker!"
        android:textColor="#164345"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:scaleX="0.2"
        android:scaleY="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>